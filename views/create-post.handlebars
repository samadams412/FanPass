<div class="column is-10">
<section>
  <a href="/dashboard" class="is-pulled-right"> &larr; Return to Dashboard</a>
  <h2 class="title ml-2">Create New Post</h2><hr />

  <form class="new-post-form">
    <div>
      <label for="post-title ml-3">Title:</label>
      <input
        class="input ml-2"
        type="text"
        id="post-title"
        name="post-title"
        placeholder="insert title here"
      />
    </div>
    <div>
      <label for="post-content ml-3">Content:</label>
      <input
  
        class="textarea is-medium ml-2"
        id="post-content"
        name="post-content"
        placeholder="insert content here"
      />
    </div>
    <button type="submit" class="button is-primary mt-2 ml-2">Create Post</button>
  </form>

  
</section>
</div>

<script src="/javascript/add-post.js"></script>