
<article>
  <a href="/dashboard" class="is-pulled-right mr-5"> &larr; Return to Dashboard</a>
  <h2 class="title is-3 mt-5 ml-5">Edit Post</h2><hr>
  <form class="edit-post-form">
    <div class="column is-4">
        <label for="post-title ml-5">Title:</label>
      <input class="input is-half" name="post-title" type="text" value="{{post.title}}" />
    </div>
    <div class="column is-8">
        <label for="post-content">Content:</label>
      <input class="textarea" name="post-content" type="text" value="{{post.post_content}}" />
    </div>
    <div class="is-pulled-right mr-6">
       Created By You on {{format_date post.created_at}}
      |
      <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
    </div>
    <button type="submit" class="button is-success ml-5">Save post</button>
    <button type="button" class="button is-danger delete-post-btn">Delete post</button>
  </form>
</article>

{{> comments post.comments}}

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
<script src="/javascript/comment.js"></script>