<div class='row'>
  <div class='col-md-5 pl-5'>
    <h2>Login</h2>

    <form class='form login-form' id='loginBtn'>
      <div class='form-group'>
        <label for='email-login'>Email:</label>
        <input class='form-input' type='text' id='email-login' />
      </div>
      <div class='form-group'>
        <label for='password-login'>Password:</label>
        <input class='form-input' type='password' id='password-login' />
      </div>
      <div class='form-group'>
        <button class='btn btn-primary' type='submit'>Login</button>
      </div>
    </form>
  </div>
  <div class='col-md-7 pr-5'>
    <h2>Signup</h2>

    <form class='form signup-form' id='signupBtn'>
      <div class='form-group'>
        <label for='name-signup'>Username:</label>
        <input class='form-input' type='text' id='name-signup' />
      </div>
      <div class='form-group'>
        <label for='email-signup'>Email:</label>
        <input class='form-input' type='text' id='email-signup' />
      </div>
      <div class='form-group'>
        <label for='twitter-signup'>Twitter:</label>
        <input class='form-input' type='text' id='twitter-signup' />
      </div>
      <div class='form-group'>
        <label for='interestOne'>Favorite Artist/Band/Musician #1:</label>
        <input class='form-input' type='text' id='interestOne' />
      </div>
      <div class='form-group'>
        <label for='interestTwo'>Favorite Artist/Band/Musician #2:</label>
        <input class='form-input' type='text' id='interestTwo' />
      </div>
      <div class='form-group'>
        <label for='interestThree'>Favorite Artist/Band/Musician #3:</label>
        <input class='form-input' type='text' id='interestThree' />
      </div>
      <div class='form-group'>
        <label for='interestFour'>Favorite Artist/Band/Musician #4:</label>
        <input class='form-input' type='text' id='interestFour' />
      </div>
      <div class='form-group'>
        <label for='interestFive'>Favorite Artist/Band/Musician #5:</label>
        <input class='form-input' type='text' id='interestFive' />
      </div>
      <div class='form-group'>
        <label for='password-signup'>Password:</label>
        <input class='form-input' type='password' id='password-signup' />
      </div>

      <div class='form-group'>
        <button class='btn btn-primary' type='submit'>Sign Up</button>
      </div>
    </form>
  </div>
</div>

<script src='/javascript/login.js'></script>
<script src='/javascript/sign-up.js'></script>