 <div class="mb-5 pt-3">
     
        <a href="/dashboard/create/"><button id="create-post" class="button is-primary is-pulled-right mr-5">Create Post</button></a>
          
        <h2 class="title pb-4 ml-3">Dashboard: {{post.id}}User Posts</h2>
        {{#each this}}
    
      
        {{user.username}}
      
    
  {{/each}}
{{#if posts.length}}
    </div>

    <div class="column is-10">
        {{#each posts as |post|}}
        {{> post-info-dash post}}
        
            <a href="/dashboard/edit/{{post.id}}"><button class="button mb-5 ml-5 is-warning">Edit Post</button></a>
        </div>
    {{/each}}
    </div>
    

{{else}}
<h6 class="pb-4 has-text-centered is-italic">No Available Posts</h6>
{{/if}}